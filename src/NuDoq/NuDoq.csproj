<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <PackageId>NuDoq</PackageId>
    <Description>A lightweight API to read and write .NET XML documentation files, optionally augmented with reflection information.</Description>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0" PrivateAssets="all" Visible="false" />
    <PackageReference Include="ThisAssembly" Version="1.0.8" PrivateAssets="all" />
  </ItemGroup>

</Project>